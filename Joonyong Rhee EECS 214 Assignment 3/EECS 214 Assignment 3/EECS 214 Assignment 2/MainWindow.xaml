<Window x:Class="Assignment_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visualization" Height="410" Width="500" Background="White" ResizeMode="NoResize">
    <StackPanel HorizontalAlignment="Left" Width="492">
        <Canvas x:Name="canvas" Height="300" Background="white" IsHitTestVisible="True" Margin="40,0,40,5"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="input" Grid.Row="0" Grid.Column="0" Margin="212,0,1,0" Height="22" VerticalAlignment="Top"/>
            <Button x:Name="SearchBtn" Content ="Search" Grid.Row="0" Grid.Column="1" Width="50" Margin="50,0,0,0"/>
            <Button x:Name="MinimumBtn" Content ="Minimum" Grid.Row="1" Grid.Column="0" Margin="212,16,160,-6" Grid.ColumnSpan="2"/>
            <Button x:Name="MaximumBtn" Content ="Maximum" Grid.Row="1" Grid.Column="1" Margin="58,16,0,-6"/>
        </Grid>
    </StackPanel>
</Window>
